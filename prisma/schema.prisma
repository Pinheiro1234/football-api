// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Teams {
  id         Int       @id
  name       String
  imgUrl     String
  homeGames  Matches[] @relation("HomeTeam")
  visitGames Matches[] @relation("VisitTeam")

  @@map("teams")
}

model Rounds {
  id      Int    @id
  name    String
  acronym String

  @@map("rounds")
}

model Datas {
  id      Int       @id
  day     String
  Matches Matches[]
  Matches Matches[]

  @@map("datas")
}

model Matches {
  id             Int      @id
  dateId         DateTime
  roundId        Int
  teamHomeId     Int
  teamHomeGoals  Int
  teamVisitId    Int
  teamVisitGoals Int
  date           Datas    @relation("Dates", fields: [dateId], references: [id])
  teamHome       Teams    @relation("HomeTeam", fields: [teamHomeId], references: [id])
  teamVisit      Teams    @relation("VisitTeam", fields: [teamVisitId], references: [id])
  datasId        Int?

  @@map("matches")
}
