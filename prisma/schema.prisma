// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Teams {
  id         Int       @id
  name       String
  imgUrl     String
  homeGames  Matches[] @relation("HomeTeam")
  visitGames Matches[] @relation("VisitTeam")

  @@map("teams")
}

model Rounds {
  id      Int       @id
  name    String
  acronym String
  match   Matches[]

  @@map("rounds")
}

model Dates {
  id    Int       @id
  day   String
  match Matches[]

  @@map("dates")
}

model Matches {
  id             Int     @id
  dateId         Int?
  date           Dates?  @relation(fields: [dateId], references: [id])
  roundId        Int
  round          Rounds? @relation(fields: [roundId], references: [id])
  teamHomeId     Int?
  teamHomeGoals  Int?
  teamVisitId    Int?
  teamVisitGoals Int?
  teamHome       Teams?  @relation("HomeTeam", fields: [teamHomeId], references: [id])
  teamVisit      Teams?  @relation("VisitTeam", fields: [teamVisitId], references: [id])

  @@map("matches")
}
